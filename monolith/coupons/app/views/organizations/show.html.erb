<div class='page-title'>Members of <%= @organization.name %></div>

<div class='container container_form_user'>

  <ul style="list-style-type: circle; margin-bottom: 25px;"">
    <% @organization.users.each do |user| %>
        <li style="margin-bottom: 5px;"><div style="display: flex;"><%= "#{user.first_name} #{user.last_name}" %>&nbsp;&nbsp;<%= button_to('View', user, method: :get, class: 'btn btn-sm btn-outline-info py-0') %> </div></li>
    <% end %>
  </ul>

  <% if current_user_is_admin %>
    <div>
      <%= button_to('Invite Users', invitation_form_path,  method: :get, class: 'btn form_btn') %>
    </div
  <% end %>
  <div>
    <%= button_to('<< Back', current_user,  method: :get, class: 'btn btn-sm btn-outline-secondary') %>
  </div>

</div>