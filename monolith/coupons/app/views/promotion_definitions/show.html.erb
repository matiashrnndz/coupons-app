<div class='page-title'>Promotion <%= @promo_definition.name %></div>

<div class='container container_form_user'>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Name:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.name %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Code:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.code %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">State:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.promotion_state %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Type:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.promotion_type %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Value:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.value %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Discount type:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.discount_type %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Attributes:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.promotion_attributes %></strong></div>
  </div>

  <div style="margin-bottom: 5px;">
    <div style="float: left; width: 50%; text-align:right;">Conditions:&nbsp;&nbsp;</div> 
    <div>&nbsp;&nbsp;<strong><%= @promo_definition.conditions %></strong></div>
  </div>

  <div style="margin-top: 20px;">
    <%= button_to('Show details', promotion_definition_promotions_path(@promo_definition.id), method: :get,  class: 'btn form_btn') %>
  </div>
  
  <div >  
    <%= button_to('<< Back', promotion_definitions_path,  method: :get, class: 'btn btn-sm btn-outline-secondary') %>
  </div>
</div>