<table class="table  table-striped table-" style="margin-top: 10px; margin-bottom: 20px;">
  
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Code</th>
      <th scope="col">State</th>
      <th scope="col">Type</th>
      <th scope="col" width="50%">Actions</th>
    </tr>
  </thead>
  <tbody>
  
  <% @promo_definitions.each do |promo| %>
    <tr>
      <td><%= promo.name %></td>
      <td><%= promo.code %></td>
      <td><%= promo.promotion_state %></td>
      <td><%= promo.promotion_type %></td>

      <td>
        <div>
        <%= button_to('View', promo, method: :get, class: 'btn btn-sm btn-outline-info py-0 btn_line') %>
      
        <% if current_user_is_admin %>
          <%= button_to('Edit', edit_promotion_definition_path(promo), method: :get, class: 'btn btn-sm btn-outline-primary py-0 btn_line') %>
          <%= button_to('Delete', promotion_definition_path(promo), method: :delete, data: { confirm: 'Delete promotion?' }, class: 'btn btn-sm btn-outline-danger py-0 btn_line') %>
        <% end %>

        <%= button_to('Report', promotion_definition_report_path(promo.id), method: :get, class: 'btn btn-sm btn-outline-secondary py-0 btn_line_separator') %>

        <% if promo.promotion_type == 'coupon' && current_user_is_admin %>
          <%= button_to('Generate coupons', new_promotion_definition_promotion_path(promo.id), method: :get, class: 'btn btn-sm btn-outline-secondary py-0 btn_line') %>
        <% end %>
        </div>
      </td>

    </tr>
  <%end%>
  </tbody>
</table>

  
