<div class='page-title' style="width:25%;">Generate coupons for <%= @promo_definition['attributes']['name'] %></div>

<div class='container container_form_user'>

  <div>
  <%= form_with url: promotion_definition_promotions_path(@promo_definition['attributes']['id']), method: :post do |form| %>
    <div class="form-group">
      <label>Coupons count</label>
      <div>
        <%= form.number_field :quantity, required: true, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <label>Coupons uses</label>
      <div>
        <%= form.number_field :uses, min: 1, required: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label>Expiration date</label>
      <div>
        <%= form.date_field :expiration_date, min: Date.today, max: @promo_definition['attributes']['expiration_date'], required: true, class: 'form-control' %>
      </div>
    </div>

    <%= form.submit 'Generate' , class: 'btn form_btn' %>
    
  <% end  %>

    <div>
      <%= button_to('<< Back', promotion_definitions_path,  method: :get, class: 'btn btn-sm btn-outline-secondary') %>
    </div>
  </div>

</div>