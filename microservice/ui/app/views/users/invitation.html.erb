<div class='page-title'>Send invitation to <%= current_user['data']['attributes']['organization']['name'] %></div>

<div class='container container_form_user'>

  <%= form_with url: invitation_link_path do |form| %>

    <div class="form-group">
      <label>Email</label>
      <div>
        <%= form.text_field 'email', size: 40, required: true, placeholder: 'Email', class: 'form-control' %>
        
      </div>
    </div>

    <div class="form-group">
      <label>Role</label>
      <div>
        <%= select_tag "role", options_for_select([["Normal", "normal"],["Financer","financer"], ["Admin","admin"] ])%>
        
      </div>
    </div>

    <div>
      <%= form.submit 'Send' , class: 'btn form_btn' %>
    </div>

  <% end %>

  <div>
    <%= button_to('<< Back', organizations_path,  method: :get, class: 'btn btn-sm btn-outline-secondary') %>
  </div>
  
</div>
