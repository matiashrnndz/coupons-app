<div style='width: 100%;'>
<%= form_for :user, url: user_path(@user['id']), method: :patch do |f| %>
    <div class="form-group">
      <label>Name</label>
      <div>
        <%= f.text_field :first_name, value: @user['attributes']['first_name'], size: 40, required: true, placeholder: 'Name', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <div>
        <%= f.text_field :last_name, value: @user['attributes']['last_name'], size: 40, required: true, placeholder: 'Last Name', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label>Email</label>
      <div>
        <%= f.text_field :email, value: @user['attributes']['email'], size: 40, required: true, placeholder: 'Email', class: 'form-control' %>
      </div>
    </div>

    <div >
      <div class="form-group">
        <label>Password</label>
        <%= f.password_field :password, size: 40, placeholder: 'Password', class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group">
      <label>Password Confirmation</label>
      <%= f.password_field :password_confirmation, size: 40, placeholder: 'Password Confirmation', class: 'form-control' %>
    </div>

    <div>
      <%= f.submit 'Edit User' , class: 'btn form_btn' %>
    </div>
<% end %>
</div>