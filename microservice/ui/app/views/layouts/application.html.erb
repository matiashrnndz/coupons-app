<!DOCTYPE html>
<html>
  <head>
    <title>Coupons</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      
      <nav class='navbar navbar-expand-lg navbar-light' style='background-color: #cccccc'>
        <img src='https://townplannerstl.com/wp-content/uploads/2016/03/Local-Coupons-circle.png' width='30' height='30' alt=''>&nbsp;
        <%= link_to('Coupons', root_path, class: 'navbar-brand') %>          
        <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation'>
          <span class='navbar-toggler-icon'></span>
        </button>
        <div class='collapse navbar-collapse' id='navbarNav'>
          <ul class='navbar-nav'>
            <li class='nav-item active'>
            </li>
          </ul>
        </div>
        <%= button_to('Logout', sessions_signout_path, method: :delete, class: 'btn btn-sm btn-outline-secondary') %>
      </nav>

    <% end %>
    <% flash.each do |key, value| %>
      <div class='alert alert-<%= key %>'><%= value %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
